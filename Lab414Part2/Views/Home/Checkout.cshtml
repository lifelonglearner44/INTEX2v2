@{
    ViewData["Title"] = "Checkout";
}

@model INTEXII.Models.ViewModels.CheckoutViewModel

@if (Model.Products.Count() > 0)
{
    <div style="width: 100%; max-width: 1421px; background: white; margin: 0 auto;">
        <h1 style="color: #A14243; font-size: 50px; font-family: Inter; font-weight: 700; margin: 60px 0;">Your Order</h1>

        <!-- Product iteration -->
        @foreach (var item in Model.Products)
        {
            <div style="display: flex; align-items: center; border-radius: 5px; border: 3px #F0F0F0 solid; margin-bottom: 20px;">
                <img style="width: 252px; height: 256px;" src="@item.img_link" />
                <div style="flex-grow: 1; padding: 20px;">
                    <h3 style="color: #9F3247; font-size: 20px; font-family: Roboto; font-weight: 700;">@item.name</h3>
                    <p style="color: #9F3247; font-size: 14px; font-family: Roboto; font-weight: 400;">Quantity: at item.Quantity</p>
                    <p style="color: #9F3247; font-size: 24px; font-family: Roboto; font-weight: 700;">$@item.price</p>
                    @*                     <button style="background: #F0F0F0; border: none; border-radius: 5px; padding: 10px; color: #A14243; font-size: 16px; font-family: Rubik; font-weight: 400;">Remove From Cart</button>
            *@
                </div>
            </div>
        }

        <!-- Subtotal -->
        <div style="background: #F0F0F0; border-radius: 5px; border: 3px #F0F0F0 solid; padding: 20px; margin-bottom: 20px;">
            <p style="color: #9F3247; font-size: 14px; font-family: Roboto; font-weight: 400;">(Tax: $@(Math.Round(Model.Products.Sum(p => p.price) * 0.07, 2)))<br />(Shipping: $0)</p>
            <h3 style="color: #9F3247; font-size: 20px; font-family: Roboto; font-weight: 700;">Subtotal: $@(Math.Round(Model.Products.Sum(p => p.price), 2))</h3>
        </div>

        <!-- Total -->
        <div style="display: flex; justify-content: flex-end; align-items: center; margin-bottom: 40px;">
            <h2 style="color: #9F3247; font-size: 36px; font-family: Roboto; font-weight: 700; margin-right: 20px;">Total: $@(Math.Round(Model.Products.Sum(p => p.price) * 1.07, 2))</h2>
            @*             <button style="background: #FFAD33; border: none; border-radius: 4px; padding: 10px 30px; color: #FAFAFA; font-size: 16px; font-family: Poppins; font-weight: 500;">Submit Order</button>
        *@
        </div>
    </div>
}
else
{
    <!-- Empty cart message -->
    <p>Your shopping cart is empty.</p>
}

<div class="row">
    <div class="col-md-6">
        <h2>Shipping Information</h2>
        <form>
            <div class="form-group">
                <label for="fullName">First Name:</label>
                <input type="text" class="form-control" id="firstName" placeholder="Enter your first name">
            </div>
            <div class="form-group">
                <label for="fullName">Last Name:</label>
                <input type="text" class="form-control" id="lastName" placeholder="Enter your last name">
            </div>
            <div class="form-group">
                <label for="address">Address:</label>
                <input type="text" class="form-control" id="address" placeholder="Enter your address">
            </div>
            <div class="form-group">
                <label for="city">City:</label>
                <input type="text" class="form-control" id="city" placeholder="Enter your city">
            </div>
            <div class="form-group">
                <label for="zipCode">ZIP Code:</label>
                <input type="text" class="form-control" id="zipCode" placeholder="Enter your ZIP code">
            </div>
            <!-- Add more shipping fields as needed -->
        </form>
    </div>
    <div class="col-md-6">
        <h2>Payment Information</h2>
        <form>
            <div class="form-group">
                <label for="cardNumber">Card Number:</label>
                <input type="text" class="form-control" id="cardNumber" placeholder="Enter your card number">
            </div>
            <div class="form-group">
                <label for="expiryDate">Expiry Date:</label>
                <input type="text" class="form-control" id="expiryDate" placeholder="Enter expiry date">
            </div>
            <div class="form-group">
                <label for="cvv">CVV:</label>
                <input type="text" class="form-control" id="cvv" placeholder="Enter CVV">
            </div>
            <!-- Add more payment fields as needed -->
        </form>
    </div>
</div>

<div class="text-center mt-4">
    <button style="background: #9F3247; border: none; border-radius: 4px; padding: 10px 30px; color: #FAFAFA; font-size: 16px; font-family: Poppins; font-weight: 500;">Submit Order</button>
</div>

</div>
